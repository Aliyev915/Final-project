@model Job
@{
    ViewData["Title"] = "Detail";
}

<!--job detail start  -->
<div class="job-detail">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="left-section">
                    <div class="job-feature">
                        <div class="row">
                            <div class="col-2">
                                <div class="image">
                                    <img src="~/img/company-logo/@Model.Company.Logo" alt="">
                                </div>
                            </div>
                            <div class="col-10">
                                <div class="info">
                                    <div class="name">
                                        @Model.Name
                                    </div>
                                    <span><i class="fas fa-briefcase"></i>@Model.Category.Name</span>
                                    <span><i class="fas fa-map-marker-alt"></i>@Model.Location.Name</span>
                                    <span><i class="far fa-clock"></i>Full Time</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="job-about">
                        <h3>Job Description</h3>
                        <p>
                            @Model.Description
                        </p>
                    </div>
                    <div class="job-experince">
                        <h3>Education + Experience</h3>
                        <ul>
                            @foreach (string item in ViewBag.Demands)
	                         {
                            <li>
                                <i class="fas fa-check"></i>
                                @item
                            </li>
	                         }
                        </ul>
                    </div>
                    <div class="related-job">
                        <h3>Related Jobs</h3>
                        <div class="job-list">
                            @foreach (Job item in ViewBag.Jobs)
                            {
                                <div class="job-about">
                                    <div class="row">
                                        <div class="col-lg-2 col-sm-4">
                                            <div class="company-logo">
                                                <img src="~/img/company-logo/@item.Company.Logo" alt="logo">
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-sm">
                                            <div class="name">
                                                <h5>@item.Name</h5>
                                            </div>
                                            <div class="add-info">
                                                <div class="row">
                                                    <p><i class="fas fa-briefcase"></i>@item.Category.Name</p>
                                                    <p><i class="fas fa-map-marker-alt"></i>@item.Location.Name</p>
                                                    <p><i class="far fa-clock"></i> Full Time</p>
                                                </div>
                                            </div>
                                            <div class="deadline">
                                                <p>Deadline: @item.Deadline.ToString("MMMM").Substring(0, 3) @item.Deadline.Day, @item.Deadline.Year</p>
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <div class="row">
                                                <div class="favorite">
                                                    <i class="far fa-heart"></i>
                                                </div>
                                                <div class="apply">
                                                    <a href="" class="btn-apply">Apply Now</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="right-section">
                    <div class="save">
                        <button class="btn-save">
                            Save Job
                        </button>
                    </div>
                    <div class="download">
                        <button class="btn-download">
                            Apply Now
                        </button>
                    </div>
                    <div class="search-side">
                        <div class="overview">
                            <h3>Job Overview</h3>
                            <div class="row">
                                <div class="col-3">
                                    <i class="fas fa-hand-holding-usd"></i>
                                </div>
                                <div class="col-9">
                                    <h5 style="font-weight: bold;">Salary</h5>
                                    <p>£@Model.Salary</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <i class="fas fa-map-marker-alt"></i>
                                </div>
                                <div class="col-9">
                                    <h5 style="font-weight: bold;">Location</h5>
                                    <p>@Model.Location.Name</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <i class="fas fa-briefcase"></i>
                                </div>
                                <div class="col-9">
                                    <h5 style="font-weight: bold;">Job Type</h5>
                                    <p>Full Time</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-3">
                                    <i class="fas fa-chart-line"></i>
                                </div>
                                <div class="col-9">
                                    <h5 style="font-weight: bold;">Experience</h5>
                                    <p>@Model.Experience Years</p>
                                </div>
                            </div>
                        </div>
                        <div class="quick-contact">
                            <h3>Quick Contact</h3>
                            <form action="">
                                <input type="text" placeholder="Name">
                                <input type="text" placeholder="Name">
                                <textarea rows="5" placeholder="Write message"></textarea>
                                <button class="btn-send">Send Message</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!--job detail end  -->
