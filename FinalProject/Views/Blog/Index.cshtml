@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
}

<!-- blog-area start-->
<div class="blog-side">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="blogs">
                    <div class="container">
                        <div class="row">
                            @foreach (Blog item in Model)
                            {
                                <div class="col-md-6">
                                    <div class="blog">
                                        <div class="image">
                                            <a asp-controller="Blog" asp-action="Detail"><img src="~/img/blog/@item.Image" alt=""></a>
                                            <div class="date">
                                                <p class="text-white">@item.Time.ToString("dd")</p>
                                                <p class="text-white">@item.Time.ToString("MMMM").Substring(0, 3)</p>
                                            </div>
                                        </div>
                                        <div class="blog-detail">
                                            <div class="title">
                                                <h3>
                                                    <a asp-controller="Blog" asp-action="Detail" asp-route-Id="@item.Id">@item.Title</a>
                                                </h3>
                                            </div>
                                            <div class="features">
                                                <p><i class="fas fa-user"></i> Admin</p>
                                                <p><i class="far fa-comment-dots"></i> 27</p>
                                                <p><i class="far fa-heart"></i>27</p>
                                            </div>
                                            <div class="description">
                                                @if (item.Description.Length <= 100)
                                                {
                                                    @item.Description
                                                }
                                                else
                                                {
                                                    @item.Description.Substring(0, 100)
                                                }
                                            </div>
                                            <div class="readMore">
                                                <a asp-controller="Blog" asp-action="Detail" asp-route-Id="@item.Id">Read more</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
                <div class="pagination">
                    <ul>
                        <li>
                            <a href="">Prev</a>
                        </li>
                        <li>
                            <a href="" class="actived">1</a>
                        </li>
                        <li>
                            <a href="">2</a>
                        </li>
                        <li>
                            <a href="">3</a>
                        </li>
                        <li>
                            <a href="">Next</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="search-side">
                    <form action="">
                        <div class="form-group search-input">
                            <h3>Search</h3>
                            <input type="text" class="form-control " placeholder="Search Keywords">
                            <button><i class="fas fa-search"></i></button>
                        </div>
                    </form>
                    <div class="recent-post">
                        <h3>Recent Posts</h3>
                        @foreach (Blog item in Model.OrderByDescending(b => b.Id).Take(3))
                        {
                            <div class="post">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="image">
                                            <img src="~/img/blog/@item.Image" alt="blog">
                                        </div>
                                    </div>
                                    <div class="col-8">
                                        <div class="post-detail">
                                            <div class="title">
                                                <h6>
                                                    <a asp-controller="Blog" asp-action="Detail" asp-route-Id="@item.Id">@item.Title</a>
                                                </h6>
                                            </div>
                                            <div class="info">
                                                <span>$3000</span>
                                                <span>
                                                    <i class="far fa-calendar-alt"></i>
                                                    @item.Time.ToString("dd MMMM, yyyy")
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="categoryList">
                        <h3>Categories</h3>
                        <div class="category">
                            <div class="row justify-content-between">
                                <p>Information</p>
                                <p>(45)</p>
                            </div>
                        </div>
                        <div class="category">
                            <div class="row justify-content-between">
                                <p>Jobs</p>
                                <p>(21)</p>
                            </div>
                        </div>
                        <div class="category">
                            <div class="row justify-content-between">
                                <p>Education</p>
                                <p>(18)</p>
                            </div>
                        </div>
                        <div class="category">
                            <div class="row justify-content-between">
                                <p>Skill</p>
                                <p>(32)</p>
                            </div>
                        </div>
                        <div class="category">
                            <div class="row justify-content-between">
                                <p>Learn</p>
                                <p>(9)</p>
                            </div>
                        </div>
                        <div class="category">
                            <div class="row justify-content-between">
                                <p>Other</p>
                                <p>(22)</p>
                            </div>
                        </div>
                    </div>
                    <div class="tagList">
                        <h3>Tags</h3>
                        <div class="tag">
                            <a href="">Image</a>
                        </div>
                        <div class="tag">
                            <a href="">Features</a>
                        </div>
                        <div class="tag">
                            <a href="">Gallery</a>
                        </div>
                        <div class="tag">
                            <a href="">Slideshow</a>
                        </div>
                        <div class="tag">
                            <a href="">Post Formats</a>
                        </div>
                        <div class="tag">
                            <a href="">Typography</a>
                        </div>
                        <div class="tag">
                            <a href="">Best Sellers</a>
                        </div>
                        <div class="tag">
                            <a href="">Woo Commerce</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- blog-area end -->
