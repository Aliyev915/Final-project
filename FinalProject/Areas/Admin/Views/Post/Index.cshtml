
@{
    ViewData["Title"] = "Post";
}
<div class="right-side">
    <h4>Post a Job</h4>
    <div class="post">
        <div class="title">
            <h4>Basic Information</h4>
        </div>
        <div class="form">
            <form action="">
                <div class="row">
                    <div class="col-lg-6">
                        <label for="">Job Title</label> <br>
                        <input type="text" class="input-text" placeholder="Your Title">
                    </div>
                    <div class="col-lg-6">
                        <label for="">Job Type</label> <br>
                        <input type="text" class="input-text" readonly placeholder="Type">
                        <div class="selectList">
                            <ul>
                                <li>Full Time</li>
                                <li>Part Time</li>
                                <li>Temprorary</li>
                                <li>Freelance</li>
                            </ul>
                        </div>
                        <div class="down">
                            <i class="fas fa-caret-down"></i>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label for="">Job Category</label> <br>
                        <input type="text" class="input-text" readonly placeholder="Category">
                        <div class="selectList">
                            <ul>
                                <li>Accounting/Finance</li>
                                <li>Restaurant</li>
                                <li>Counseling</li>
                                <li>Health Care</li>
                            </ul>
                        </div>
                        <div class="down">
                            <i class="fas fa-caret-down"></i>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label for="">Gender</label> <br>
                        <input type="text" class="input-text" readonly placeholder="Gender">
                        <div class="selectList">
                            <ul>
                                <li>All</li>
                                <li>Male</li>
                                <li>Female</li>
                            </ul>
                        </div>
                        <div class="down">
                            <i class="fas fa-caret-down"></i>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label for="">Currency</label> <br>
                        <input type="text" class="input-text" readonly placeholder="Currency">
                        <div class="selectList">
                            <ul>
                                <li>AZN</li>
                                <li>USD</li>
                                <li>EURO</li>
                            </ul>
                        </div>
                        <div class="down">
                            <i class="fas fa-caret-down"></i>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label for="">Salary</label> <br>
                        <input type="number" min="300" step="50" class="input-text" placeholder="Salary">
                    </div>
                    <div class="col-lg-6">
                        <label for="">Country</label> <br>
                        <input type="text" class="input-text" readonly placeholder="Country">
                        <div class="selectList">
                            <ul>
                                <li>Azerbaijan</li>
                                <li>Turkey</li>
                                <li>Russian</li>
                            </ul>
                        </div>
                        <div class="down">
                            <i class="fas fa-caret-down"></i>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label for="">City</label> <br>
                        <input type="text" class="input-text" readonly placeholder="City">
                        <div class="selectList">
                            <ul>
                                <li>Baku</li>
                                <li>Istanbul</li>
                                <li>Moscow</li>
                            </ul>
                        </div>
                        <div class="down">
                            <i class="fas fa-caret-down"></i>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label for="">Education</label> <br>
                        <input type="text" class="input-text" readonly placeholder="Education">
                        <div class="selectList">
                            <ul>
                                <li>Subbachelor</li>
                                <li>Bachelor</li>
                                <li>Master</li>
                            </ul>
                        </div>
                        <div class="down">
                            <i class="fas fa-caret-down"></i>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <label for="">Experience</label> <br>
                        <input type="number" min="0" max="20" class="input-text" placeholder="Experience">
                    </div>
                    <div class="col-lg-12">
                        <label for="">Job Description</label>
                        <textarea rows="8" placeholder="Detailed Information"></textarea>
                    </div>
                    <div class="col-lg-6 mt-5">
                        <div class="btn-upload">File Upload</div>
                        <input type="file" class="file-input" style="display: none;">
                        <button class="btn-post">Post a Job</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div class="copyright">
        <p>© 2018 Theme Vessel. Trademarks and brands are the property of their respective owners.</p>
    </div>
</div>

@section Scripts{
    <script>
        let btnUpload = document.querySelector('.btn-upload');
        let fileInput = document.querySelector('.file-input');
        btnUpload.onclick = function () {
            fileInput.click();
        }
    </script>

}

