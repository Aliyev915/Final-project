<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/admin/css/style.css">
    <link rel="shortcut icon" href="~/img/adminfavicon.png" type="image/x-icon">
    <title>Dashboard</title>
</head>

<body>
    <!-- header -->
    <header>
        <div class="navbar">
            <div class="row justify-content-between w-100">
                <div class="col-1">
                    <div class="logo">
                        <img src="~/img/logo/black-logo.png" alt="">
                    </div>
                </div>
                <div class="col-3 text-center">
                    <div class="user">
                        <img src="~/img/avatar/avatar-1.jpg" alt="user">
                        <a href="~/admin/">
                            Hi, John
                            <i class="fas fa-caret-down"></i>
                        </a>
                        <div class="dropdown">
                            <ul>
                                <li>
                                    <a asp-area="" asp-controller="Home" asp-action="Index">Index</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="Message" asp-action="Index">Message</a>
                                </li>
                                <li>
                                    <a asp-area="Admin" asp-controller="Profile" asp-action="Edit">Edit Profile</a>
                                </li>
                                <li>
                                    <a asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="navbar-responsive">
            <div class="row justify-content-between w-100">
                <div class="logo">
                    <img src="~/img/logo/black-logo.png" alt="">
                </div>
                <div class="burger-button">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>
            </div>
            <div class="dropdown-responsive">
                <ul>
                    <li>
                        <a asp-controller="Home" asp-action="Index">Index</a>
                    </li>
                    <li>
                        <a>Dashboard</a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Dashboard" asp-action="Post">Post a Job</a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Candidate" asp-action="Index">Manage Candidate</a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Job" asp-action="Index">Manage Jobs</a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Message" asp-action="Index">Messages</a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Blog" asp-action="Index">Manage Blog</a>
                    </li>
                    <li>
                        <a asp-area="Admin" asp-controller="Profile" asp-action="Edit">Edit Profile</a>
                    </li>
                    <li>
                        <a asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </header>
    <!-- header -->

    <div class="main">
        @await Component.InvokeAsync("Sidebar")
        @RenderBody()
    </div>
    <!-- back to top -->
    <div class="back-to-top">
        <i class="fas fa-chevron-up"></i>
    </div>
    <!-- back to top -->

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/4a0d6e395d.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>
    <script src="~/admin/js/script.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
